#!/usr/bin/python3

import shlex
import subprocess
import sys
import util

cl = util.get_issue_number()

if not cl:
    sys.exit(0)

print("\n### CL " + str(cl))

open_files = util.get_open_files_for_cl(cl)
desc = subprocess.check_output(shlex.split("git cl description -d")).decode()

print("\n" + desc)

print("" + str(len(open_files)) + " open files:\n\t" + " \\\n\t".join(open_files))
